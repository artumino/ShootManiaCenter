<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/relativeLayout"
        >

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="null" android:id="@+id/name"
              android:singleLine="true"
              android:ellipsize="marquee"
              android:layout_marginLeft="16dp"
              android:layout_alignParentTop="true" android:layout_toRightOf="@+id/rank"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="0LP" android:id="@+id/points"
              android:textColor="#dfcf0e"
              android:textStyle="bold"
        android:layout_alignBottom="@+id/region"
              android:layout_alignParentRight="true" android:textColorHighlight="#c60700" android:typeface="normal"
              android:focusableInTouchMode="false"
        android:layout_toRightOf="@+id/region"
        android:singleLine="true"
        android:gravity="right" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" android:text="null|null"
              android:id="@+id/region"
              android:layout_alignBottom="@+id/rank" android:layout_alignLeft="@+id/name"
        android:singleLine="true" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="#0" android:id="@+id/rank"
              android:shadowColor="#000000"
              android:singleLine="true" android:textSize="40dp" android:textStyle="bold"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:maxLength="2"/>
</RelativeLayout>